<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/registeredleft_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/registered_title"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a3a3a3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_username" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/registeredusername_et"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入用户名" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="35dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/registeredpassword_et"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入密码" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="35dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/registeredpasswordtwo_et"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请确认密码" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="35dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_safety" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/registeredproblem_et"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入密保问题" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="35dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_safety" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/registeredanswer_et"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入密保答案" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="35dp"
                android:background="#cccccc" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/registered_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_registered" />

</LinearLayout>