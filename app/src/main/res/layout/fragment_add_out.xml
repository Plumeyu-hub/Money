<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/add_out_bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="246.5dp"
        android:layout_alignParentBottom="true"
        android:background="#b0000000"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F2F3F5">

            <View
                android:id="@+id/add_out_view1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/add_out_view2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/add_out_view2"
                android:layout_toEndOf="@id/add_out_view1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/add_out_money_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_money" />

                    <TextView
                        android:id="@+id/add_out_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@id/add_out_money_iv"
                        android:text="@string/money"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/add_out_money_delect_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_delete" />

                    <EditText
                        android:id="@+id/add_out_money_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@id/add_out_money_delect_btn"
                        android:layout_toEndOf="@id/add_out_money_tv"
                        android:background="#F2F3F5"
                        android:gravity="center_vertical"
                        android:hint="@string/money_hint"
                        android:paddingStart="5dp"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry,TextFields" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/account"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/add_out_sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="#F2F3F5" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F2F3F5">

            <View
                android:id="@+id/add_out_view3"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/add_out_view4"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/add_out_view4"
                android:layout_toEndOf="@id/add_out_view3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_theme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/remark"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_out_submit_remark_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F2F3F5"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/remark_hint"
                        android:paddingStart="5dp"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry,TextFields" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_day" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/date"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_out_date_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="#F2F3F5"
                        android:focusable="false"
                        android:text="@string/app_date"
                        android:textColor="@color/color_333333" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="#F2F3F5">

            <View
                android:id="@+id/add_out_view5"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/add_out_view6"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/add_out_view7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/add_out_view7"
                android:layout_toStartOf="@id/add_out_view6"
                android:layout_toEndOf="@id/add_out_view5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="MissingPrefix,NestedWeights">

                        <TextView
                            android:id="@+id/add_out_one_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_two_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_three_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/add_out_four_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_five_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_six_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/add_out_seven_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_eight_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <TextView
                            android:id="@+id/add_out_nine_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_out_dot_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F2F3F5"
                        android:gravity="center"
                        android:text="·"
                        android:textColor="@color/color_333333"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <TextView
                        android:id="@+id/add_out_zero_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F2F3F5"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/color_333333"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <TextView
                        android:id="@+id/add_out_yes_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_FF6B6A"
                        android:gravity="center"
                        android:text="@string/app_yes"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_out_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_out_bottom_lin" />

</RelativeLayout>