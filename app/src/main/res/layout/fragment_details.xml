<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true">
    <!-- 一个控件，如果没有定义focusable(可聚焦的)，却定义了是clickable（可点击的），那么是不能通过键盘访问的 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/drawer_btn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher" />
            <!-- contentDescription是为视力有障碍的人增加对控件的解释 -->

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/details_month_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:focusable="false"
                android:text="@string/app_select_date"
                android:textColor="@color/color_666666"
                android:textSize="22sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_FF6B6A" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/details_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:scaleType="center"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/color_FF6B6A"
                app:elevation="50dp"
                app:fabSize="normal"
                app:rippleColor="@color/color_FF6B6A" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/up_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/add_fab"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_up"
                android:visibility="gone"
                app:backgroundTint="@color/color_FF6B6A"
                app:fabSize="normal" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/details_empty_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_data_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_no_data"
                android:textColor="@color/color_FF6B6A"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FF6B6A"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personal_info_btn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_personal_info" />

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawer_login"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_my"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mes_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_mes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/drawer_mes"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:background="#a3a3a3" />

                <LinearLayout
                    android:id="@+id/remind_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_remind" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/drawer_remind"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/budget_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/budget_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_budget" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/budget_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_budget"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/export_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/export_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_export" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/export_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_export"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/clear_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/clear_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_clear" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/clear_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_clear"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/set_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/set_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/set_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_set"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/help_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/help_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/help_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_help"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/about_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/about_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/about_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_about"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/demo_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/demo_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_demo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/demo_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/demo_home_title"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3a3a3" />

            <RelativeLayout
                android:id="@+id/exit_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingStart="20dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/exit_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_exit_app" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/exit_img"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/drawer_exit"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.drawerlayout.widget.DrawerLayout>