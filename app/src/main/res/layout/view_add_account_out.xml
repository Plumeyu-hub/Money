<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/lin_addoutcal"
        android:layout_width="match_parent"
        android:layout_height="246.5dp"
        android:layout_alignParentBottom="true"
        android:background="#b0000000"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F2F3F5" >

            <View
                android:id="@+id/addoutv1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/addoutv2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/addoutv2"
                android:layout_toRightOf="@id/addoutv1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_addoutmo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_mo" />

                    <TextView
                        android:id="@+id/tv_addoutmotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/iv_addoutmo"
                        android:text="金额:"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/bt_aouts"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_delete"
                        android:clickable="true"
                        android:onClick="clickoutnum" />

                    <EditText
                        android:id="@+id/et_aoutmoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/bt_aouts"
                        android:layout_toRightOf="@id/tv_addoutmotext"
                        android:background="#F2F3F5"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="请输入金额"
                        android:paddingLeft="5dp"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_mhome" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="选择账户:"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_addoutaccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#F2F3F5" >
                    </Spinner>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F2F3F5" >

            <View
                android:id="@+id/addoutv3"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/addoutv4"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/addoutv4"
                android:layout_toRightOf="@id/addoutv3"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_theme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="备注:"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/addoutcaltext_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F2F3F5"
                        android:clickable="true"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="点击写备注..."
                        android:onClick="click"
                        android:paddingLeft="5dp"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_day" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="选择日期:"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_addoutshowdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#F2F3F5"
                        android:editable="false"
                        android:focusable="false"
                        android:text="2020-4-5"
                        android:textColor="@color/color_333333" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D9D9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="#F2F3F5" >

            <View
                android:id="@+id/addoutv5"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/addoutv6"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#D8D9D9" />

            <View
                android:id="@+id/addoutv7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#D8D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/addoutv7"
                android:layout_toLeftOf="@id/addoutv6"
                android:layout_toRightOf="@id/addoutv5"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_aout1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="1"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="2"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="3"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_aout4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="4"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="5"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="6"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_aout7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="7"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="8"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#D8D9D9" />

                        <Button
                            android:id="@+id/bt_aout9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F2F3F5"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="clickoutnum"
                            android:text="9"
                            android:textColor="@color/color_333333"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D8D9D9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/bt_aoutd"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F2F3F5"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="clickoutnum"
                        android:text="·"
                        android:textColor="@color/color_333333"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <Button
                        android:id="@+id/bt_aout0"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F2F3F5"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="clickoutnum"
                        android:text="0"
                        android:textColor="@color/color_333333"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D8D9D9" />

                    <Button
                        android:id="@+id/bt_aoutyes"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_FF6B6A"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="click"
                        android:text="完成"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_addout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin_addoutcal"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingTop="10dp"
        android:verticalSpacing="10dp" >
    </GridView>

</RelativeLayout>