<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FF6B6A"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/add_top_lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/add_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_exit_fff" />

            <TextView
                android:id="@+id/add_out_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/out"
                android:textColor="@color/color_333333"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/add_in_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/in"
                android:textColor="@color/color_333333"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/add_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/add_top_lin"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:scaleType="matrix"
        android:src="@drawable/bg_underline" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/add_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_scrollbar" />

</RelativeLayout>