<resources>

    <!--
        Base application ic_theme, dependent on API level. This ic_theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application ic_theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- dialog_exit -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- dialog的动画 -->
    <style name="main_menu_animStyle">
        <item name="android:windowEnterAnimation">@anim/anim_move_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_move_bottom_out</item>
    </style>

    <!-- 带输入框 -->
    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <!-- 显示软件盘 -->
    </style>

    <!-- 饼状图 -->
    <declare-styleable name="PieChartView">
        <attr name="pie_size" format="dimension" />
        <!-- 饼状图的直径 -->
        <attr name="pie_space" format="float" />
        <!-- 饼状图间隔尺寸 -->
        <attr name="open_animation" format="boolean" />
        <!-- 是否开启动画 -->
        <attr name="show_tip" format="boolean" />
        <!-- 是否显示提示说明的线 -->
    </declare-styleable>

</resources>